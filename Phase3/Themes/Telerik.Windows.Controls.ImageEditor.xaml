                                <RowDefinition Height="Auto" MinHeight="36"/>
                                <RowDefinition Height="Auto" MinHeight="36"/>
                                <RowDefinition Height="Auto" MinHeight="36"/>
                                <RowDefinition Height="Auto" MinHeight="36"/>
                                <RowDefinition Height="Auto" MinHeight="36"/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="{telerik:LocalizableResource Key=ImageEditor_SelectionTool_Selection}" VerticalAlignment="Center"/>
                            <telerik:RadComboBox x:Name="PART_SelectionComboBox"
                                    Grid.Column="1"
                                    HorizontalAlignment="Right"
                                    SelectedIndex="0"
                                    Width="100"
                                    DisplayMemberPath="DisplayName"
                                    VerticalAlignment="Center"
                                    Margin="0 4"/>
                            <StackPanel Grid.Row="1">
                                <CheckBox x:Name="PART_SelectionLockRatioCheckBox"
                                        Content="{telerik:LocalizableResource Key=ImageEditor_SelectionTool_LockRatio}"
                                        HorizontalAlignment="Left"
                                        IsChecked="False"
                                        Margin="0 5"
                                        Foreground="{telerik:MaterialResource ResourceKey=MarkerBrush}"/>
                                <CheckBox x:Name="PART_IsAutoResetSettingsEnabledCheckBox"
                                        Content="{telerik:LocalizableResource Key=ImageEditor_SelectionTool_AutoResetSettings}"
                                        HorizontalAlignment="Left"
                                        IsChecked="False"
                                        Margin="0 5"
                                        Foreground="{telerik:MaterialResource ResourceKey=MarkerBrush}"/>
                            </StackPanel>
                            <Grid Grid.Row="2" Grid.ColumnSpan="2" Margin="0 10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid>
                                    <mat:Shadow ShadowDepth="{TemplateBinding mat:MaterialAssist.ShadowDepth}" Background="{telerik:MaterialResource ResourceKey=MainBrush}"/>
                                    <TextBlock x:Name="drawToolHeaderHelperTextBlock" Text="{telerik:LocalizableResource Key=ImageEditor_Draw}" Visibility="Collapsed"/>
                                    <TextBlock
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Left"
                                            TextWrapping="Wrap"
                                            Margin="{StaticResource ToolSettingsHeader_Margin}"
                                            Text="{Binding ElementName=drawToolHeaderHelperTextBlock, Path=Text}"
                                            Foreground="{TemplateBinding Foreground}"
                                            FontSize="{TemplateBinding FontSize}"
                                            FontFamily="{TemplateBinding FontFamily}"/>
                                </Grid>
                                <Grid HorizontalAlignment="{TemplateBinding HorizontalAlignment}" Margin="{StaticResource ToolSettings_ContentPresenterMargin}" Row="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="3*"/>
                                    </Grid.ColumnDefinitions>
                                    <telerik:RadToggleButton x:Name="PART_IsDrawingEnabledToggleButton" Grid.Column="1" Margin="0 2 0 10" HorizontalAlignment="Right">
                                        <StackPanel Orientation="Horizontal">
                                            <telerik:RadGlyph
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    Foreground="{telerik:MaterialResource ResourceKey=IconBrush}"
                                                    FontSize="16"
                                                    Glyph="{StaticResource GlyphPalette}"
                                                    RenderTransformOrigin="0.5 0.5"/>
                                            <TextBlock Margin="5 0" VerticalAlignment="Center" Text="{telerik:LocalizableResource Key=ImageEditor_Draw}"/>
                                        </StackPanel>
                                    </telerik:RadToggleButton>
                                    <TextBlock
                                            Grid.Row="1"
                                            Text="{telerik:LocalizableResource Key=ImageEditor_DrawTool_BrushSize}"
                                            Margin="0 2"
                                            Foreground="{telerik:MaterialResource ResourceKey=MarkerBrush}"
                                            VerticalAlignment="Center"/>
                                    <telerik:RadNumericUpDown x:Name="PART_BrushSizeNumericUpDown" Value="1" Grid.Row="1" Grid.Column="1" Minimum="1" Maximum="99" Margin="0 2" HorizontalAlignment="Right" Width="150"/>
                                    <TextBlock
                                            Text="{telerik:LocalizableResource Key=ImageEditor_DrawTool_BrushColor}"
                                            Grid.Row="2"
                                            Margin="0 2"
                                            Foreground="{telerik:MaterialResource ResourceKey=MarkerBrush}"
                                            VerticalAlignment="Center"/>
                                    <telerik:RadColorPicker x:Name="PART_ColorPicker"
                                            Grid.Row="2"
                                            Grid.Column="1"
                                            SelectedColor="Black"
                                            Margin="0 2"
                                            HorizontalAlignment="Right"
                                            AutomaticColor="Black"
                                            NoColorText="{telerik:LocalizableResource Key=ImageEditor_ColorPicker_NoColorText_Black}"/>
                                </Grid>
                            </Grid>
                            <StackPanel Grid.Row="3" Grid.ColumnSpan="2" Margin="-10 0 0 0" x:Name="PART_SelectionSettingsStackPanel"/>
                            <telerik:RadToggleButton x:Name="PART_InvertColorsToggleButton" Grid.Row="4" Grid.Column="0" Margin="0 2" HorizontalAlignment="Left">
                                <StackPanel Orientation="Horizontal">
                                    <telerik:RadGlyph
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Foreground="{telerik:MaterialResource ResourceKey=IconBrush}"
                                            FontSize="16"
                                            Glyph="{StaticResource GlyphMirror}"
                                            RenderTransformOrigin="0.5 0.5"/>
                                    <TextBlock Margin="5 0" VerticalAlignment="Center" Text="{telerik:LocalizableResource Key=ImageEditor_SelectionTool_InvertColors}"/>
                                </StackPanel>
                            </telerik:RadToggleButton>
                        </Grid>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
