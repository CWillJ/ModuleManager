<Window x:Class="ModuleManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModel="clr-namespace:ModuleManager.ViewModels"
        xmlns:interface="clr-namespace:ModuleManager.Interfaces"
        xmlns:data="clr-namespace:ModuleManager.Classes"
        mc:Ignorable="d"
        Title="Module Manager" Height="450" Width="800" Background="LightGray">

    <Window.DataContext>
        <viewModel:ModuleManagerViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources\DataTemplates.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="6*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.ColumnSpan="2">
            <Button
                HorizontalAlignment="Left"
                Height="30"
                Width="125"
                Margin="25,10,5,5"
                Command="{Binding LoadModulesCommand}"
                Content="Load Modules"
                FontWeight="Bold"
                Background="IndianRed"/>

            <Button
                HorizontalAlignment="Left"
                Height="30"
                Width="125"
                Margin="25,10,5,5"
                Command="{Binding SaveConfigCommand}"
                Content="Save Configuration"
                FontWeight="Bold"
                Background="IndianRed"/>

            <Grid Visibility="{Binding Path=ProgressBarIsVisible, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"
                  Width="300"
                  Height="30"
                  Margin="30,15,5,5">
                <ProgressBar Value="{Binding Path=CurrentProgress, Mode=OneWay}"
                             IsIndeterminate="True" />

                <TextBlock Text="{Binding Path=ProgressBarText, Mode=OneWay}"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Grid>

        </StackPanel>

        <StackPanel Orientation="Horizontal"
                    Grid.Row="1"
                    Margin="20,20,20,20"
                    Grid.ColumnSpan="2">

            <StackPanel>
                <Border BorderBrush="Black" BorderThickness="2">
                    <TextBlock Text="Modules"
                               FontWeight="Bold"
                               TextAlignment="Center"
                               Background="LightSteelBlue"/>
                </Border>

                <!-- Module Template ItemTemplateSelector="{StaticResource myTreeViewItemSelector}"-->
                <TreeView ItemsSource="{Binding Path=Modules, Mode=TwoWay}"
                          SelectedItemChanged="TreeView_SelectedItemChanged"
                          ItemTemplateSelector="{StaticResource myTreeViewItemSelector}">

                </TreeView>
            </StackPanel>

            <!-- Description Template <ItemsControl x:Name="MemberText" ItemTemplateSelector="{StaticResource myDataTemplateSelector}"/>-->
            <StackPanel Width="540">
                <Border BorderBrush="Black" BorderThickness="2" Margin="10,0,10,0">
                    <TextBlock TextAlignment="Center"
                               TextWrapping="Wrap"
                               FontWeight="Bold"
                               Text="Description"
                               Background="LightSteelBlue" />
                </Border>

                <Border BorderBrush="Black" BorderThickness="1" Margin="10,0" Height="275" Background="White">
                    <ScrollViewer Margin="10,5,0,0">
                        <ItemsControl x:Name="MemberText"
                                      ItemTemplateSelector="{StaticResource myDataTemplateSelector}"/>
                    </ScrollViewer>
                </Border>
            </StackPanel>

        </StackPanel>
    </Grid>
</Window>