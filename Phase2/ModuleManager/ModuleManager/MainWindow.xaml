<Window x:Class="ModuleManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ModuleManager"
        xmlns:viewModel="clr-namespace:ModuleManager.ViewModels"
        xmlns:data="clr-namespace:ModuleManager.Classes"
        xmlns:view="clr-namespace:ModuleManager.Views"
        xmlns:behaviors="clr-namespace:ModuleManager.Behavoirs"
        mc:Ignorable="d"
        Title="Module Manager" Height="450" Width="800">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <Button
                HorizontalAlignment="Left"
                Height="30"
                Width="125"
                Margin="30,15,5,5"
                Command="{Binding LoadModulesCommand}"
                Content="Load Modules"
            />

            <Button
                HorizontalAlignment="Left"
                Height="30"
                Width="125"
                Margin="30,15,5,5"
                Command="{Binding SaveConfigCommand}"
                Content="Save Configuration"
            />

            <Grid>
                <ProgressBar Value="{Binding Path=CurrentProgress, Mode=OneWay}"
                             Visibility="{Binding Path=CurrentProgressVisible, Mode=OneWay}"
                             Width="300"
                             Height="30"
                             Margin="30,15,5,5"
                             Minimum="0"
                             Maximum="100"/>

                <TextBlock Text="{Binding Path=CurrentProgressText, Mode=OneWay}"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Grid>

        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="20,20">

            <StackPanel>
                <TextBlock Text="Modules" TextAlignment="Center"/>

                <!-- Module Template -->
                <!-- behaviors:SelectedTreeViewItemBehavior.TreeViewSelectedItem="{Binding SelectedModule}" -->
                <TreeView ItemsSource="{Binding Path=Modules}"
                          SelectedItemChanged="TreeView_SelectedItemChanged"
                          Width="200"
                          Height="275"
                          BorderThickness="1"
                          BorderBrush="Black">

                    <!--<TreeView.Resources>
                        <Style TargetType="TreeViewItem">
                            <Setter Property="IsSelected" Value="{Binding Path=IsSelected}" />
                        </Style>
                    </TreeView.Resources>-->

                    <TreeView.ItemTemplate>
                        <HierarchicalDataTemplate ItemsSource="{Binding Path=Members}">
                            <StackPanel Orientation="Horizontal">
                                <CheckBox IsChecked="{Binding Path=Enabled}" Margin="5,0"/>
                                <TextBlock Text="{Binding Path=Name}"/>
                            </StackPanel>

                            <!-- Method Template -->
                            <HierarchicalDataTemplate.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Path=Name}" />
                                </DataTemplate>
                            </HierarchicalDataTemplate.ItemTemplate>

                        </HierarchicalDataTemplate>
                    </TreeView.ItemTemplate>

                </TreeView>
            </StackPanel>

            <!-- Text="{Binding Path=MemberText}" -->
            
            <StackPanel>
                <TextBlock TextAlignment="Center" Text="Description" />

                <Border BorderThickness="1" BorderBrush="Black" Margin="10,0" Height="275">
                    <ScrollViewer Margin="10,5,0,0">
                        <TextBlock x:Name="MemberText" Width="480" TextWrapping="Wrap"/>
                    </ScrollViewer>
                </Border>
            </StackPanel>

        </StackPanel>
    </Grid>
</Window>