<Window x:Class="ModuleManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModel="clr-namespace:ModuleManager.ViewModels"
        xmlns:views="clr-namespace:ModuleManager.Views"
        mc:Ignorable="d"
        Title="Module Manager"
        Height="550"
        Width="1000"
        MinHeight="500"
        MinWidth="800"
        Background="LightGray">

    <Window.DataContext>
        <viewModel:ModuleManagerViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Views\DataTemplates.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition Height="6*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0"
              Grid.ColumnSpan="2">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="1.5*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <views:LoadSaveButtons/>
            </Grid>

            <Grid Grid.Column="1"
                  Margin="0,10,30,5"
                  MinWidth="300"
                  Height="30">
                <views:ProgressBar/>
            </Grid>
        </Grid>

        <Grid Grid.Row="1"
              Margin="20,20,20,20"
              Grid.ColumnSpan="2">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <!-- Future Implementation of Individual UserControls
            <Grid Grid.Column="0">
                <views:ModuleView/>
            </Grid>

            <Grid Grid.Column="1">
                <views:DescriptionView/>
            </Grid>
            -->

            <!-- Modules Grid -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="15*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0"
                        BorderBrush="Black"
                        BorderThickness="2">
                    <TextBlock Text="Modules"
                               MinHeight="20"
                               FontWeight="Bold"
                               TextAlignment="Center"
                               Background="LightSteelBlue"/>
                </Border>

                <!-- TreeView of Module Objects -->
                <TreeView Grid.Row="1"
                          ItemsSource="{Binding Path=Modules, Mode=TwoWay}"
                          x:Name="myTreeView"
                          MinHeight="275"
                          MinWidth="100"
                          BorderThickness="1"
                          BorderBrush="Black">

                    <TreeView.ItemTemplate>
                        <HierarchicalDataTemplate ItemsSource="{Binding Path=Members}">
                            <StackPanel Orientation="Horizontal">
                                <CheckBox IsChecked="{Binding Path=IsEnabled}"
                                          Margin="5,0"/>
                                <TextBlock Text="{Binding Path=Name}"/>
                            </StackPanel>

                            <HierarchicalDataTemplate.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Path=Name}"/>
                                </DataTemplate>
                            </HierarchicalDataTemplate.ItemTemplate>

                        </HierarchicalDataTemplate>
                    </TreeView.ItemTemplate>

                </TreeView>
            </Grid>

            <!-- Description Grid -->
            <Grid  Grid.Column="1"
                   MinWidth="550">

                <Grid.RowDefinitions>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="15*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0"
                        BorderBrush="Black"
                        BorderThickness="2"
                        Margin="10,0,10,0">
                    <TextBlock
                        TextAlignment="Center"
                               MinHeight="20"
                               FontWeight="Bold"
                               Text="Description"
                               Background="LightSteelBlue"/>
                </Border>

                <Border Grid.Row="1"
                        BorderBrush="Black"
                        BorderThickness="1"
                        Margin="10,0"
                        MinHeight="275"
                        Background="White">
                    <ScrollViewer Margin="10,5,0,0">
                        <ContentControl x:Name="MemberText"
                                        Content="{
                            Binding ElementName=myTreeView,
                            Path=SelectedItem}"
                                        ContentTemplateSelector="{
                            StaticResource myDataTemplateSelector}"/>
                    </ScrollViewer>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>