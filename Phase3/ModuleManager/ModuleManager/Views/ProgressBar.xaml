<UserControl
    x:Class="ModuleManager.Views.ProgressBar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behaviors="clr-namespace:ModuleManager.Behavoirs"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="50"
    d:DesignWidth="360"
    mc:Ignorable="d">

    <UserControl.Resources>
        <behaviors:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </UserControl.Resources>

    <Grid Visibility="{Binding Path=ProgressBarIsVisible, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">

        <ProgressBar
            IsIndeterminate="False"
            Maximum="100"
            Minimum="0"
            Value="{Binding Path=CurrentProgress, Mode=OneWay}" />

        <TextBlock
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Text="{Binding Path=ProgressBarText, Mode=OneWay}" />
    </Grid>
</UserControl>