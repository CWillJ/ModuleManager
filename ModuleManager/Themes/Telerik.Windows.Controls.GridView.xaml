                Visibility="Collapsed">
                <Border.RenderTransform>
                    <ScaleTransform ScaleX="0" ScaleY="1" />
                </Border.RenderTransform>
            </Border>
            <Border
                x:Name="Background_Current_NoAnimation"
                Background="{x:Null}"
                BorderBrush="{telerik1:MaterialResource ResourceKey=PrimaryHoverBrush}"
                BorderThickness="0,0,0,3"
                Visibility="Collapsed" />
            <Border
                x:Name="Background_Invalid"
                Background="{telerik1:MaterialResource ResourceKey=MainBrush}"
                BorderBrush="{telerik1:MaterialResource ResourceKey=ValidationBrush}"
                BorderThickness="0,0,0,3"
                Visibility="Collapsed">
                <ToolTipService.ToolTip>
                    <ToolTip
                        x:Name="validationTooltip"
                        Content="{TemplateBinding Errors}"
                        Placement="Right"
                        Template="{StaticResource GridViewValidationToolTipTemplate}" />
