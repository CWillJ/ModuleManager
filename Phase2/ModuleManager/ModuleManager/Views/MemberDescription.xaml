<UserControl x:Class="ModuleManager.Views.MemberDescription"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ModuleManager.Views"
             xmlns:viewModel="clr-namespace:ModuleManager.ViewModels"
             xmlns:data="clr-namespace:ModuleManager.Classes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.DataContext>
        <viewModel:ModuleManagerViewModel/>
    </UserControl.DataContext>

    <UserControl.Resources>
        <DataTemplate DataType="{x:Type data:Module}">
            <StackPanel>
                <TextBox Text="{Binding Path=Name}"/>
                <TextBox Text="{Binding Path=Description}"/>
                <TextBlock Text="{Binding Path=Members}"/>
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="methodTemplate">

        </DataTemplate>
    </UserControl.Resources>

    <Grid>
        <ListBox ItemsSource="{Binding Path=Modules}"/>
    </Grid>
</UserControl>
