        <Setter Property="Header" Value="{Binding Manager.Culture, Source={StaticResource localizationManagerProvider}, Converter={StaticResource cultureToStringConverter}, ConverterParameter=FileDialogs_OpenFolderDialogHeader}" />
    </Style>
    <Style BasedOn="{StaticResource RadOpenFileDialogStyle}" TargetType="telerikControls:RadOpenFileDialog" />
    <Style BasedOn="{StaticResource RadSaveFileDialogStyle}" TargetType="telerikControls:RadSaveFileDialog" />
    <Style BasedOn="{StaticResource RadOpenFolderDialogStyle}" TargetType="telerikControls:RadOpenFolderDialog" />
