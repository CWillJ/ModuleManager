        <Setter Property="PathStyle" Value="{StaticResource UnpinnedButtonStyle}" />
        <Setter Property="PathGeometry" Value="M4,2 L4,3 L8,3 L8,2 z M3,0 L4,0 L4,1 L8,1 L9,1 L9,2 L9,3 L9,6 L8,6 L4,6 L4,7 L3,7 L3,6 L3,4 L0,4 L0,3 L3,3 L3,2 L3,1 z" />
        <Setter Property="MinHeight" Value="44" />
        <Setter Property="MinWidth" Value="44" />
        <Setter Property="IsBackgroundVisible" Value="False" />
        <Setter Property="Command" Value="{x:Static telerik:RadGridViewCommands.TogglePinnedRowState}" />
        <Setter Property="CommandParameter" Value="{Binding}" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
        <Setter Property="VerticalContentAlignment" Value="Stretch" />
        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
        <Setter Property="IsTabStop" Value="False" />
        <Setter Property="Padding" Value="3" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="telerik:RadPathButton">
                    <Grid Background="Transparent">
                        <Border
                            x:Name="OuterBorder"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{TemplateBinding CornerRadius}" />
                        <Path
                            x:Name="Path"
                            Margin="{TemplateBinding Padding}"
                            Data="{TemplateBinding PathGeometry}"
                            SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                            Style="{TemplateBinding PathStyle}" />
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="BackgroundVisibility">
                                <VisualState x:Name="BackgroundIsHidden">
                                    <Storyboard>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="OuterBorder" Storyboard.TargetProperty="Visibility">
                                            <DiscreteObjectKeyFrame KeyTime="0">
                                                <DiscreteObjectKeyFrame.Value>
                                                    <Visibility>Collapsed</Visibility>
                                                </DiscreteObjectKeyFrame.Value>
                                            </DiscreteObjectKeyFrame>
                                        </ObjectAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="BackgroundIsVisible" />
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsPinned" Value="True">
                <Setter Property="PathGeometry" Value="M2,1L2,5L3,5L3,1zM3,0L6,0L6,1L6,5L7,5L7,6L4,6L4,9L3,9L3,6L2,6L1,6L0,6L0,5L1,5L1,1L1,1e-006L2,1e-006z" />
                <Setter Property="PathStyle" Value="{StaticResource PinnedButtonStyle}" />
            </Trigger>
        </Style.Triggers>
    </Style>
    <Style BasedOn="{StaticResource GridViewPinButtonStyle}" TargetType="grid:GridViewPinButton" />
    <ControlTemplate x:Key="RemoveItemButtonControlTemplate" TargetType="telerik:RadButton">
        <mat:MaterialControl
            CornerRadius="{TemplateBinding CornerRadius}"
            IsRippleCentered="True"
            IsSmartClipped="True">
            <Grid x:Name="LayoutRoot" Background="Transparent">
                <Ellipse
                    x:Name="Background"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Fill="{TemplateBinding Background}"
                    Stroke="{x:Null}"
                    StrokeThickness="0" />
                <telerik:RadGlyph
                    x:Name="Content"
                    Margin="{TemplateBinding Padding}"
                    HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                    VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                    FontSize="16"
                    Foreground="{TemplateBinding Foreground}"
                    Glyph="{StaticResource GlyphClose}"
                    Opacity=".5" />
            </Grid>
        </mat:MaterialControl>
        <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{telerik1:MaterialResource ResourceKey=DividerBrush}" />
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="{telerik1:MaterialResource ResourceKey=DividerBrush}" />
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
                <Setter TargetName="Content" Property="Opacity" Value="{telerik1:MaterialResource ResourceKey=DisabledOpacity}" />
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>
    <Style x:Key="SearchAutoCompleteBoxRemoveItemButtonStyle" TargetType="telerik:RadButton">
        <Setter Property="Template" Value="{StaticResource RemoveItemButtonControlTemplate}" />
        <Setter Property="Foreground" Value="{telerik1:MaterialResource ResourceKey=IconBrush}" />
        <Setter Property="Background" Value="{x:Null}" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Margin" Value="0,0,8,0" />
        <Setter Property="MinHeight" Value="0" />
        <Setter Property="Width" Value="16" />
        <Setter Property="Height" Value="16" />
    </Style>
    <Style x:Key="SearchAutoCompleteBoxItemStyle" TargetType="mccb:SearchAutoCompleteBoxItem">
        <Setter Property="mat:MaterialAssist.CornerRadius" Value="12" />
        <Setter Property="Foreground" Value="{telerik1:MaterialResource ResourceKey=MarkerBrush}" />
        <Setter Property="Background" Value="{telerik1:MaterialResource ResourceKey=AccentNormalBrush}" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="BorderBrush" Value="Transparent" />
        <Setter Property="Padding" Value="16,5,8,6" />
        <Setter Property="Margin" Value="4,3,2,3" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="mccb:SearchAutoCompleteBoxItem">
                    <Grid>
                        <Border
                            x:Name="BorderVisual"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{TemplateBinding mat:MaterialAssist.CornerRadius}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <ContentPresenter
                                    x:Name="contentPresenter"
                                    Margin="{TemplateBinding Padding}"
                                    HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                    VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                    TextBlock.Foreground="{TemplateBinding Foreground}" />
                                <telerik:RadButton
                                    x:Name="RemoveItemButton"
                                    Grid.Column="1"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Stretch"
                                    Command="mccb:SearchAutoCompleteBoxCommands.RemoveItem"
                                    CommandParameter="{Binding}"
                                    Cursor="Arrow"
                                    Focusable="False"
                                    IsTabStop="False"
                                    Style="{StaticResource SearchAutoCompleteBoxRemoveItemButtonStyle}" />
                            </Grid>
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="contentPresenter" Property="Opacity" Value="{telerik1:MaterialResource ResourceKey=DisabledOpacity}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <ControlTemplate x:Key="SearchAutoCompleteBoxTemplate" TargetType="mccb:SearchAutoCompleteBox">
        <Grid>
            <Border
                x:Name="BorderVisual"
                Background="{TemplateBinding Background}"
                BorderBrush="{TemplateBinding BorderBrush}"
                BorderThickness="{TemplateBinding BorderThickness}"
                CornerRadius="{TemplateBinding mat:MaterialAssist.CornerRadius}"
                SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
            <ScrollViewer
                x:Name="PART_ScrollViewer"
                Height="{TemplateBinding Height}"
                Margin="{TemplateBinding BorderThickness}"
                Padding="0"
                VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
                Background="Transparent"
                BorderThickness="0"
                Focusable="False"
                HorizontalScrollBarVisibility="{TemplateBinding ScrollViewer.HorizontalScrollBarVisibility}"
                IsTabStop="False"
                SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                VerticalScrollBarVisibility="{TemplateBinding ScrollViewer.VerticalScrollBarVisibility}">
                <mccb:SearchAutoCompleteBoxesItemsControl
                    x:Name="PART_Boxes"
                    Margin="{TemplateBinding Padding}"
                    Foreground="{TemplateBinding Foreground}"
                    IsTabStop="False"
                    ItemsSource="{TemplateBinding SelectedItems}"
                    SelectionBoxesVisibility="{TemplateBinding SelectionBoxesVisibility}">
                    <mccb:SearchAutoCompleteBoxesItemsControl.Editor>
                        <telerik:RadWatermarkTextBox
                            x:Name="WatermarkTextBox"
                            MinWidth="{TemplateBinding EditorMinWidth}"
                            Padding="0"
                            mat:MaterialAssist.FocusBrush="{x:Null}"
                            BorderBrush="{x:Null}"
                            BorderThickness="0"
                            DisabledBackground="{x:Null}"
                            IsReadOnly="{TemplateBinding IsReadOnly}"
                            ReadOnlyBackground="{x:Null}"
                            WatermarkBehavior="HideOnTextEntered"
                            WatermarkContent="{TemplateBinding NullText}" />
                    </mccb:SearchAutoCompleteBoxesItemsControl.Editor>
                    <mccb:SearchAutoCompleteBoxesItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <mccb:SearchAutoCompleteBoxWrapPanel />
                        </ItemsPanelTemplate>
                    </mccb:SearchAutoCompleteBoxesItemsControl.ItemsPanel>
                </mccb:SearchAutoCompleteBoxesItemsControl>
            </ScrollViewer>
        </Grid>
        <ControlTemplate.Triggers>
            <Trigger Property="ShowNullText" Value="False">
                <Setter TargetName="WatermarkTextBox" Property="WatermarkContent" Value="{x:Null}" />
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>
    <Style x:Key="SearchAutoCompleteBoxStyle" TargetType="mccb:SearchAutoCompleteBox">
        <Setter Property="Template" Value="{StaticResource SearchAutoCompleteBoxTemplate}" />
        <Setter Property="mat:MaterialAssist.CornerRadius" Value="{telerik1:MaterialResource ResourceKey=CornerRadius}" />
        <Setter Property="FontFamily" Value="{telerik1:MaterialResource ResourceKey=FontFamily}" />
        <Setter Property="FontSize" Value="{telerik1:MaterialResource ResourceKey=FontSize}" />
        <Setter Property="BorderBrush" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="IsTabStop" Value="False" />
        <Setter Property="Padding" Value="4,1" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto" />
    </Style>
    <Style BasedOn="{StaticResource SearchAutoCompleteBoxItemStyle}" TargetType="mccb:SearchAutoCompleteBoxItem" />
    <Style BasedOn="{StaticResource SearchAutoCompleteBoxStyle}" TargetType="mccb:SearchAutoCompleteBox" />
    <Style x:Key="RadMultiColumnComboBoxStyle" TargetType="controls:RadMultiColumnComboBox">
        <Style.Setters>
            <Setter Property="mat:MaterialAssist.MouseOverBrush" Value="{telerik1:MaterialResource ResourceKey=AlternativeBrush}" />
            <Setter Property="mat:MaterialAssist.PressedBrush" Value="{telerik1:MaterialResource ResourceKey=ComplementaryBrush}" />
            <Setter Property="mat:MaterialAssist.CornerRadius" Value="{telerik1:MaterialResource ResourceKey=CornerRadius}" />
            <Setter Property="mat:MaterialAssist.ShadowDepth" Value="Depth0" />
            <Setter Property="Background" Value="{telerik1:MaterialResource ResourceKey=MainBrush}" />
            <Setter Property="BorderBrush" Value="{telerik1:MaterialResource ResourceKey=DividerBrush}" />
            <Setter Property="BorderThickness" Value="0,0,0,1" />
            <Setter Property="FontFamily" Value="{telerik1:MaterialResource ResourceKey=FontFamily}" />
            <Setter Property="FontSize" Value="{telerik1:MaterialResource ResourceKey=FontSize}" />
            <Setter Property="MinHeight" Value="36" />
            <Setter Property="DropDownMinWidth" Value="200" />
            <Setter Property="DropDownMinHeight" Value="110" />
            <Setter Property="DropDownHeight" Value="330" />
            <Setter Property="DropDownMaxHeight" Value="500" />
            <Setter Property="DropDownMaxWidth" Value="1000" />
            <Setter Property="EditorMinWidth" Value="50" />
            <Setter Property="SnapsToDevicePixels" Value="True" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="FocusVisualStyle" Value="{x:Null}" />
            <Setter Property="KeyboardNavigation.TabNavigation" Value="Continue" />
            <Setter Property="IsTabStop" Value="False" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="controls:RadMultiColumnComboBox">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <mat:Shadow
                                x:Name="Shadow"
                                Grid.ColumnSpan="2"
                                Background="{TemplateBinding Background}"
                                CornerRadius="{TemplateBinding mat:MaterialAssist.CornerRadius}"
                                ShadowDepth="{TemplateBinding mat:MaterialAssist.ShadowDepth}" />
                            <Border
                                x:Name="BackgroundVisual"
                                Grid.ColumnSpan="2"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="{TemplateBinding mat:MaterialAssist.CornerRadius}"
                                IsHitTestVisible="False"
                                SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                            <mccb:SearchAutoCompleteBox
                                x:Name="PART_SearchAutoCompleteBox"
                                Grid.Column="0"
                                AutoCompleteProvider="{TemplateBinding AutoCompleteProvider}"
                                BorderThickness="0"
                                DeferTextChange="{TemplateBinding DeferTextChange}"
                                EditorMinWidth="{TemplateBinding EditorMinWidth}"
                                IsReadOnly="{TemplateBinding IsReadOnly}"
                                NullText="{TemplateBinding NullText}"
                                SelectedItems="{TemplateBinding SelectedItems}"
                                SelectionBoxStyle="{TemplateBinding SelectionBoxStyle}"
                                SelectionBoxStyleSelector="{TemplateBinding SelectionBoxStyleSelector}"
                                SelectionBoxTemplate="{TemplateBinding SelectionBoxTemplate}"
                                SelectionBoxTemplateSelector="{TemplateBinding SelectionBoxTemplateSelector}"
                                SelectionBoxesVisibility="{TemplateBinding SelectionBoxesVisibility}"
                                SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                            <telerik:RadDropDownButton
                                x:Name="PART_DropDownButton"
                                Grid.Column="1"
                                Padding="0"
                                mat:MaterialAssist.IsShadowDisabled="True"
                                BorderBrush="Transparent"
                                DropDownHeight="{TemplateBinding DropDownHeight}"
                                DropDownMaxHeight="{TemplateBinding DropDownMaxHeight}"
                                DropDownMaxWidth="{TemplateBinding DropDownMaxWidth}"
                                DropDownMinHeight="{TemplateBinding DropDownMinHeight}"
                                DropDownMinWidth="{TemplateBinding DropDownMinWidth}"
                                DropDownPlacement="{TemplateBinding DropDownPlacement}"
                                DropDownWidth="{TemplateBinding DropDownWidth}"
                                Focusable="False"
                                IsTabStop="False"
                                KeepOpen="{TemplateBinding KeepDropDownOpen}"
                                PopupPlacementTarget="{Binding ElementName=BackgroundVisual}"
                                SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}">
                                <telerik:RadDropDownButton.DropDownContent>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <ContentControl
                                            Grid.RowSpan="1"
                                            Grid.ColumnSpan="2"
                                            Content="{TemplateBinding ItemsSourceProvider}">
                                            <ContentControl.ContentTemplate>
                                                <DataTemplate>
                                                    <controls:RadGridView
                                                        AlternateRowStyle="{Binding AlternateRowStyle}"
                                                        AlternateRowStyleSelector="{Binding AlternateRowStyleSelector}"
                                                        AlternationCount="{Binding AlternationCount}"
                                                        AutoGenerateColumns="{Binding AutoGenerateColumns}"
                                                        BorderThickness="0"
                                                        CanUserGroupColumns="False"
                                                        CanUserSearch="False"
                                                        ColumnWidth="{Binding ColumnWidth}"
                                                        ContextMenu="{Binding ContextMenu}"
                                                        DataContext="{Binding}"
                                                        EnableLostFocusSelectedState="False"
                                                        GroupRenderMode="Flat"
                                                        IsReadOnly="{Binding IsReadOnly}"
                                                        IsSynchronizedWithCurrentItem="False"
                                                        ItemsSource="{Binding CollectionView}"
                                                        RowIndicatorVisibility="{Binding RowIndicatorVisibility}"
                                                        RowStyle="{Binding RowStyle}"
                                                        RowStyleSelector="{Binding RowStyleSelector}"
                                                        SearchStateManager="{Binding SearchStateManager}"
                                                        SelectionMode="Extended"
                                                        ShowColumnFooters="{Binding ShowColumnFooters}"
                                                        ShowColumnHeaders="{Binding ShowColumnHeaders}"
                                                        ShowGroupPanel="False"
                                                        ShowSearchPanel="False" />
                                                </DataTemplate>
                                            </ContentControl.ContentTemplate>
                                        </ContentControl>
                                        <Border
                                            Grid.Row="1"
                                            Grid.ColumnSpan="2"
                                            Background="{telerik1:MaterialResource ResourceKey=MainBrush}"
                                            BorderBrush="{telerik1:MaterialResource ResourceKey=DividerBrush}"
                                            BorderThickness="0,1,0,0"
                                            CornerRadius="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=(mat:MaterialAssist.CornerRadius), Converter={StaticResource CornerRadiusConverter}, ConverterParameter=BottomLeftRight}"
                                            Visibility="{TemplateBinding FooterVisibility}">
                                            <ContentPresenter
                                                x:Name="Footer"
                                                Margin="5"
                                                VerticalAlignment="Center"
                                                Content="{TemplateBinding FooterContent}"
                                                ContentTemplate="{TemplateBinding FooterContentTemplate}">
                                                <ContentPresenter.Resources>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="TextTrimming" Value="CharacterEllipsis" />
                                                        <Setter Property="Margin" Value="{Binding ElementName=CornerResizerIcon, Path=ActualWidth, Converter={StaticResource DoubleToThicknessConverter}, ConverterParameter=Right}" />
                                                    </Style>
                                                </ContentPresenter.Resources>
                                            </ContentPresenter>
                                        </Border>
                                        <Path
                                            x:Name="CornerResizerIcon"
                                            Grid.Row="1"
                                            Grid.ColumnSpan="2"
                                            Width="12"
                                            Height="12"
                                            Margin="4"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Bottom"
                                            Data="M8.0,0 L12,0 12,8 12,12 8.0,12 0,12 0,8 8.0,8 z"
                                            Fill="#4C000000"
                                            Opacity="0.54"
                                            Stretch="Fill"
                                            StrokeThickness="0"
                                            Visibility="{TemplateBinding FooterVisibility}" />
                                        <Thumb
                                            x:Name="PART_HorizontalResizer"
                                            Grid.RowSpan="2"
                                            Grid.Column="1"
                                            Width="3"
                                            HorizontalAlignment="Right"
                                            Cursor="SizeWE"
                                            Opacity="0"
                                            Visibility="{Binding CanUserResizeDropDown, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                        <Thumb
                                            x:Name="PART_CornerResizer"
                                            Grid.RowSpan="2"
                                            Grid.Column="1"
                                            Width="3"
                                            Height="3"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Bottom"
                                            Cursor="SizeNWSE"
                                            Opacity="0"
                                            Visibility="{Binding CanUserResizeDropDown, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                        <Thumb
                                            x:Name="PART_VerticalResizer"
                                            Grid.RowSpan="2"
                                            Grid.Column="0"
                                            Height="3"
                                            VerticalAlignment="Bottom"
                                            Cursor="SizeNS"
                                            Opacity="0"
                                            Visibility="{Binding CanUserResizeDropDown, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                    </Grid>
                                </telerik:RadDropDownButton.DropDownContent>
                            </telerik:RadDropDownButton>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="BackgroundVisual" Property="Background" Value="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=(mat:MaterialAssist.MouseOverBrush)}" />
                                <Setter Property="mat:MaterialAssist.ShadowDepth" Value="Depth1" />
                            </Trigger>
                            <Trigger Property="IsKeyboardFocusWithin" Value="True">
                                <Setter TargetName="BackgroundVisual" Property="Background" Value="{telerik1:MaterialResource ResourceKey=MainBrush}" />
                                <Setter TargetName="Shadow" Property="Background" Value="{telerik1:MaterialResource ResourceKey=MainBrush}" />
                                <Setter Property="mat:MaterialAssist.ShadowDepth" Value="Depth3" />
                            </Trigger>
                            <Trigger Property="IsReadOnly" Value="True">
                                <Setter Property="Background" Value="{telerik1:MaterialResource ResourceKey=ReadOnlyBackgroundBrush}" />
                            </Trigger>
                            <Trigger SourceName="PART_DropDownButton" Property="IsOpen" Value="True">
                                <Setter Property="mat:MaterialAssist.ShadowDepth" Value="Depth2" />
                                <Setter Property="mat:MaterialAssist.CornerRadius" Value="{telerik1:MaterialResource ResourceKey=CornerRadiusTop}" />
                            </Trigger>
                            <Trigger Property="DropDownWidth" Value="NaN">
                                <Setter TargetName="PART_DropDownButton" Property="DropDownWidth" Value="{Binding RelativeSource={RelativeSource AncestorType=controls:RadMultiColumnComboBox}, Path=ActualWidth}" />
                            </Trigger>
                            <Trigger Property="FooterVisibility" Value="Visible">
                                <Setter TargetName="PART_CornerResizer" Property="Width" Value="{Binding ElementName=CornerResizerIcon, Path=Width}" />
                                <Setter TargetName="PART_CornerResizer" Property="Height" Value="{Binding ElementName=CornerResizerIcon, Path=Height}" />
                                <Setter TargetName="PART_CornerResizer" Property="Grid.Row" Value="1" />
                                <Setter TargetName="PART_VerticalResizer" Property="Grid.Row" Value="1" />
                            </Trigger>
                            <Trigger Property="CanUserResizeDropDown" Value="False">
                                <Setter TargetName="CornerResizerIcon" Property="Visibility" Value="Collapsed" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style.Setters>
    </Style>
    <Style BasedOn="{StaticResource RadMultiColumnComboBoxStyle}" TargetType="controls:RadMultiColumnComboBox" />
</ResourceDictionary>
