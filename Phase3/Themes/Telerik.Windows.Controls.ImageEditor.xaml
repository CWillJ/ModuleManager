    <sys:String x:Key="GlyphSave"></sys:String>
    <sys:String x:Key="GlyphPan"></sys:String>
    <sys:String x:Key="GlyphThreeStateNull"></sys:String>
    <sys:String x:Key="GlyphImageResize"></sys:String>
    <sys:String x:Key="GlyphCrop"></sys:String>
    <sys:String x:Key="GlyphMirror"></sys:String>
    <sys:String x:Key="GlyphFlipHorizontal"></sys:String>
    <sys:String x:Key="GlyphFlipVertical"></sys:String>
    <sys:String x:Key="GlyphRotate"></sys:String>
    <sys:String x:Key="GlyphPalette"></sys:String>
    <sys:String x:Key="GlyphBrightnessContrast"></sys:String>
    <sys:String x:Key="GlyphSaturation"></sys:String>
    <sys:String x:Key="GlyphGreyscale"></sys:String>
    <sys:String x:Key="GlyphBlur"></sys:String>
    <sys:String x:Key="GlyphSharpen"></sys:String>
    <sys:String x:Key="GlyphShape"></sys:String>
    <sys:String x:Key="GlyphRoundCorners"></sys:String>
    <sys:String x:Key="GlyphBold"></sys:String>
    <sys:String x:Key="GlyphItalic"></sys:String>
    <sys:String x:Key="GlyphUnderline"></sys:String>
    <sys:String x:Key="GlyphEditTools"></sys:String>
    <sys:String x:Key="GlyphFolderOpen"></sys:String>
    <telerik:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    <Thickness x:Key="ToolSettings_ControlPadding">0</Thickness>
    <Thickness x:Key="ToolSettingsHeader_Margin">12 9 0 10</Thickness>
    <Thickness x:Key="ToolSettings_ContentPresenterMargin">12</Thickness>
    <Thickness x:Key="ToolSettings_ShortContentPresenterMargin">12</Thickness>
    <Thickness x:Key="ToolSettings_TextTopMargin">0 12 0 0</Thickness>
    <Style TargetType="imageEditor:RadImageEditor" x:Key="RadImageEditorStyle">
        <Setter Property="mat:MaterialAssist.ShadowDepth" Value="Depth2"/>
        <Setter Property="FontFamily" Value="{telerik:MaterialResource ResourceKey=FontFamily}"/>
        <Setter Property="FontSize" Value="{telerik:MaterialResource ResourceKey=FontSize}"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="imageEditor:RadImageEditor">
                    <Grid x:Name="LayoutRoot">
                        <ScrollViewer x:Name="ScrollViewer"
                                HorizontalScrollBarVisibility="Auto"
                                VerticalScrollBarVisibility="Auto"
                                BorderBrush="{x:Null}"
                                Background="{TemplateBinding Background}"
                                Padding="-1 -1 0 0">
                            <Grid x:Name="ScrollContent">
                                <Grid x:Name="ImageView">
                                    <mat:Shadow ShadowDepth="{TemplateBinding mat:MaterialAssist.ShadowDepth}" Background="{telerik:MaterialResource ResourceKey=MainBrush}"/>
                                    <Grid Background="{telerik:MaterialResource ResourceKey=MainBrush}" HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <Image x:Name="MainImage"/>
                                        <Grid x:Name="PreviewPanel"/>
                                    </Grid>
                                </Grid>
                            </Grid>
                        </ScrollViewer>
                        <Grid>
                            <toolsUI:InlineToolSettingsPane x:Name="ToolSettingsPane" Visibility="Collapsed"/>
                        </Grid>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style TargetType="toolsUI:InlineToolSettingsPane" x:Key="InlineToolSettingsPaneStyle">
        <Setter Property="FontFamily" Value="{telerik:MaterialResource ResourceKey=FontFamily}"/>
        <Setter Property="FontSize" Value="{telerik:MaterialResource ResourceKey=FontSize}"/>
        <Setter Property="Foreground" Value="{telerik:MaterialResource ResourceKey=MarkerBrush}"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="VerticalAlignment" Value="Top"/>
        <Setter Property="MinWidth" Value="160"/>
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="toolsUI:InlineToolSettingsPane">
                    <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Cursor="Hand">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <ContentPresenter Margin="4"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="1" Margin="4">
                                <telerik:RadButton Name="ButtonOK" Margin="4 0" MinWidth="58" Content="{telerik:LocalizableResource Key=Ok}"/>
                                <telerik:RadButton Name="ButtonCancel" Margin="4 0" MinWidth="58" Content="{telerik:LocalizableResource Key=Cancel}"/>
                                <telerik:RadButton Name="ButtonReset" Margin="4 0" MinWidth="58" HorizontalAlignment="Right" Content="{telerik:LocalizableResource Key=Reset}"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style TargetType="toolsUI:ToolSettingsPanel" x:Key="ToolSettingsPanelStyle">
        <Setter Property="FontFamily" Value="{telerik:MaterialResource ResourceKey=FontFamily}"/>
        <Setter Property="FontSize" Value="{telerik:MaterialResource ResourceKey=FontSize}"/>
        <Setter Property="Foreground" Value="{telerik:MaterialResource ResourceKey=MarkerBrush}"/>
        <Setter Property="Background" Value="{telerik:MaterialResource ResourceKey=MainBrush}"/>
        <Setter Property="BorderBrush" Value="{x:Null}"/>
        <Setter Property="Margin" Value="0"/>
        <Setter Property="VerticalAlignment" Value="Stretch"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="VerticalContentAlignment" Value="Top"/>
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        <Setter Property="MinWidth" Value="330"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="toolsUI:ToolSettingsPanel">
                    <Grid Background="{TemplateBinding Background}">
                        <mat:Shadow ShadowDepth="Depth1" Background="{telerik:MaterialResource ResourceKey=MainBrush}"/>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}">
                                <ContentPresenter Margin="{TemplateBinding Margin}" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                            </ScrollViewer>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Right" Grid.Row="1" Margin="12">
                                <telerik:RadButton
                                        Visibility="Collapsed"
                                        Margin="0 0 90 0"
                                        x:Name="PART_CommitSelectionButton"
                                        MinWidth="100"
                                        Content="{telerik:LocalizableResource Key=ImageEditor_SelectionTool_CommitSelection}"
                                        Command="{Binding Path=Commands.CommitSelection, ElementName=ImageEditor}"/>
                                <telerik:RadButton x:Name="ButtonOK" Visibility="Collapsed" MinWidth="100" Margin="0 0 8 0" Content="{telerik:LocalizableResource Key=Ok}"/>
                                <telerik:RadButton x:Name="ButtonCancel" Visibility="Collapsed" MinWidth="100" Margin="0 0 8 0" Content="{telerik:LocalizableResource Key=Cancel}"/>
                                <telerik:RadButton x:Name="ButtonReset" MinWidth="100" Content="{telerik:LocalizableResource Key=Reset}"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style TargetType="Thumb" x:Key="ThumbStyleEmpty">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Thumb">
                    <Rectangle Fill="Black"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style TargetType="Thumb" x:Key="IntersectionThumbStyle">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Thumb">
                    <Rectangle Fill="{telerik:MaterialResource ResourceKey=AccentNormalBrush}" Width="14" Height="14"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style TargetType="Thumb" x:Key="BridgeThumbStyle">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Thumb">
                    <Rectangle Fill="{telerik:MaterialResource ResourceKey=AccentNormalBrush}"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style TargetType="toolsUI:CropAdorner" x:Key="CropAdornerStyle">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="toolsUI:CropAdorner">
                    <Grid x:Name="MainGrid">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Rectangle Fill="Black" Opacity="0.3" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3"/>
                        <Rectangle Fill="Black" Opacity="0.3" Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="1"/>
                        <Rectangle Fill="Black" Opacity="0.3" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3"/>
                        <Rectangle Fill="Black" Opacity="0.3" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="1"/>
                        <Thumb x:Name="ThumbC" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Style="{StaticResource ThumbStyleEmpty}" Opacity="0"/>
                        <Thumb x:Name="ThumbL"
                                Width="16"
                                Grid.Row="1"
                                Grid.Column="1"
                                Margin="-8 0 0 0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Stretch"
                                Style="{StaticResource ThumbStyleEmpty}"
                                Opacity="0"
                                Cursor="SizeWE"/>
                        <Thumb x:Name="ThumbR"
                                Width="16"
                                Grid.Row="1"
                                Grid.Column="1"
                                Margin="0 0 -8 0"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Stretch"
                                Style="{StaticResource ThumbStyleEmpty}"
                                Opacity="0"
                                Cursor="SizeWE"/>
                        <Thumb x:Name="ThumbT"
                                Height="16"
                                Grid.Row="1"
                                Grid.Column="1"
                                Margin="0 -8 0 0"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Top"
                                Style="{StaticResource ThumbStyleEmpty}"
                                Opacity="0"
                                Cursor="SizeNS"/>
                        <Thumb x:Name="ThumbB"
                                Height="16"
                                Grid.Row="1"
                                Grid.Column="1"
                                Margin="0 0 0 -8"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Bottom"
                                Style="{StaticResource ThumbStyleEmpty}"
                                Opacity="0"
                                Cursor="SizeNS"/>
                        <Thumb x:Name="ThumbTL"
                                Grid.Row="1"
                                Grid.Column="1"
                                Cursor="SizeNWSE"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Style="{StaticResource IntersectionThumbStyle}"
                                Margin="-6 -6 0 0"/>
                        <Thumb x:Name="ThumbTR"
                                Grid.Row="1"
                                Grid.Column="1"
                                Cursor="SizeNESW"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Style="{StaticResource IntersectionThumbStyle}"
                                Margin="0 -6 -6 0"/>
                        <Thumb x:Name="ThumbBR"
                                Grid.Row="1"
                                Grid.Column="1"
                                Cursor="SizeNWSE"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Bottom"
                                Style="{StaticResource IntersectionThumbStyle}"
                                Margin="0 0 -6 -6"/>
                        <Thumb x:Name="ThumbBL"
                                Grid.Row="1"
                                Grid.Column="1"
                                Cursor="SizeNESW"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Bottom"
                                Style="{StaticResource IntersectionThumbStyle}"
                                Margin="-6 0 0 -6"/>
                        <Thumb x:Name="ThumbBridgeL" Grid.Row="1" Grid.Column="1" Width="1" HorizontalAlignment="Left" VerticalAlignment="Stretch" Style="{StaticResource BridgeThumbStyle}"/>
                        <Thumb x:Name="ThumbBridgeT" Grid.Row="1" Grid.Column="1" Height="1" HorizontalAlignment="Stretch" VerticalAlignment="Top" Style="{StaticResource BridgeThumbStyle}"/>
                        <Thumb x:Name="ThumbBridgeR" Grid.Row="1" Grid.Column="1" Width="1" HorizontalAlignment="Right" VerticalAlignment="Stretch" Style="{StaticResource BridgeThumbStyle}"/>
                        <Thumb x:Name="ThumbBridgeB" Grid.Row="1" Grid.Column="1" Height="1" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Style="{StaticResource BridgeThumbStyle}"/>
                        <Canvas Grid.Row="1" Grid.Column="1" Margin="-2 -16 0 0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock x:Name="CropSizeLabel" Foreground="{telerik:MaterialResource ResourceKey=MarkerInvertedBrush}" IsHitTestVisible="False"/>
                                <TextBlock Text="px" Margin="2 0 0 0" Foreground="{telerik:MaterialResource ResourceKey=MarkerInvertedBrush}" IsHitTestVisible="False"/>
                            </StackPanel>
                        </Canvas>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <ControlTemplate x:Key="ImageEditorToggleButtonTemplate" TargetType="telerik:RadToggleButton">
        <ContentPresenter Content="{TemplateBinding Content}" ContentTemplate="{TemplateBinding ContentTemplate}"/>
    </ControlTemplate>
    <Style x:Key="EmptyFocusVisual">
        <Setter Property="Control.Template">
            <Setter.Value>
                <ControlTemplate>
                    <Rectangle Stroke="Transparent" StrokeThickness="0" Margin="0"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="ImageEditorExpanderStyle" TargetType="telerik:RadExpander">
        <Setter Property="FontFamily" Value="{telerik:MaterialResource ResourceKey=FontFamily}"/>
        <Setter Property="FontSize" Value="{telerik:MaterialResource ResourceKey=FontSize}"/>
        <Setter Property="Foreground" Value="{telerik:MaterialResource ResourceKey=MarkerBrush}"/>
        <Setter Property="Background" Value="#00FFFFFF"/>
        <Setter Property="BorderBrush" Value="#00FFFFFF"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        <Setter Property="VerticalContentAlignment" Value="Stretch"/>
        <Setter Property="VerticalHeaderAlignment" Value="Center"/>
        <Setter Property="ExpandDirection" Value="Down"/>
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        <Setter Property="animation:AnimationManager.AnimationSelector">
            <Setter.Value>
                <animation:AnimationSelector>
                    <animation:ExpanderExpandCollapseAnimation AnimationName="Expand" Direction="In" TargetElementName="Content"/>
                    <animation:ExpanderExpandCollapseAnimation AnimationName="Collapse" Direction="Out" TargetElementName="Content"/>
                </animation:AnimationSelector>
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="telerik:RadExpander">
                    <Grid HorizontalAlignment="{TemplateBinding HorizontalAlignment}" VerticalAlignment="{TemplateBinding VerticalAlignment}">
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="ExpandStateGroup">
                                <VisualState x:Name="Expanded">
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="arrow" Storyboard.TargetProperty="(FrameworkElement.RenderTransform).Angle" To="180" Duration="0:0:0.2"/>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Collapsed">
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="arrow" Storyboard.TargetProperty="(FrameworkElement.RenderTransform).Angle" To="0" Duration="0:0:0.2"/>
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        <Border BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition x:Name="row0" Height="Auto" MinHeight="48"/>
                                    <RowDefinition x:Name="row1" Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition x:Name="col0" Width="Auto"/>
                                    <ColumnDefinition x:Name="col1" Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <telerik:RadToggleButton x:Name="ImageEditorHeaderButton"
                                        TabIndex="{TemplateBinding TabIndex}"
                                        HorizontalAlignment="{TemplateBinding HorizontalHeaderAlignment}"
                                        VerticalAlignment="{TemplateBinding VerticalHeaderAlignment}"
                                        HorizontalContentAlignment="{TemplateBinding HorizontalHeaderAlignment}"
                                        VerticalContentAlignment="{TemplateBinding VerticalHeaderAlignment}"
                                        Background="Transparent"
                                        Template="{StaticResource ImageEditorToggleButtonTemplate}"
                                        IsChecked="{Binding Path=IsExpanded, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                                        ClickMode="{TemplateBinding ClickMode}"
                                        FontSize="{TemplateBinding FontSize}"
                                        FontStyle="{TemplateBinding FontStyle}"
                                        FontWeight="{TemplateBinding FontWeight}"
                                        FontFamily="{TemplateBinding FontFamily}"
                                        FontStretch="{TemplateBinding FontStretch}"
                                        Foreground="{TemplateBinding Foreground}"
                                        FocusVisualStyle="{StaticResource EmptyFocusVisual}">
                                    <Grid x:Name="HeaderPanel" Background="Transparent">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <telerikPrimitives:LayoutTransformControl x:Name="HeaderContentTransform" RenderTransformOrigin=".5 .5" Grid.Column="0" Grid.Row="0">
                                            <ContentControl x:Name="HeaderContent"
                                                    Margin="16 0 0 0"
                                                    Opacity="{telerik:MaterialResource ResourceKey=PrimaryOpacity}"
                                                    VerticalAlignment="Center"
                                                    HorizontalAlignment="Stretch"
                                                    DataContext="{TemplateBinding Header}"
                                                    Content="{Binding}"
                                                    ContentTemplate="{TemplateBinding HeaderTemplate}"
                                                    FontFamily="{TemplateBinding FontFamily}"
                                                    FontSize="{TemplateBinding FontSize}"
                                                    Foreground="{TemplateBinding Foreground}"/>
                                        </telerikPrimitives:LayoutTransformControl>
                                        <Grid Grid.Column="1" Grid.Row="0">
                                            <Grid x:Name="arrowPanel" RenderTransformOrigin="0.5 0.5">
                                                <Grid.RenderTransform>
                                                    <RotateTransform/>
                                                </Grid.RenderTransform>
                                                <TextBlock x:Name="arrow"
                                                        Opacity="{telerik:MaterialResource ResourceKey=SecondaryOpacity}"
                                                        telerik:GlyphAdorner.ShowGlyphInDesignTime="True"
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"
                                                        FontFamily="{StaticResource TelerikWebUI}"
                                                        Foreground="{telerik:MaterialResource ResourceKey=IconBrush}"
                                                        FontSize="16"
                                                        FontWeight="Normal"
                                                        FontStyle="Normal"
                                                        Margin="16"
                                                        RenderTransformOrigin="0.5 0.5">
                                                    <Run Text="{StaticResource GlyphArrowChevronDown}"/>
                                                    <TextBlock.RenderTransform>
                                                        <RotateTransform Angle="0"/>
                                                    </TextBlock.RenderTransform>
                                                </TextBlock>
                                            </Grid>
                                        </Grid>
                                    </Grid>
                                </telerik:RadToggleButton>
                                <ContentPresenter x:Name="Content"
                                        Margin="{TemplateBinding Padding}"
                                        Visibility="Collapsed"
                                        Content="{TemplateBinding Content}"
                                        ContentTemplate="{TemplateBinding ContentTemplate}"
                                        HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                        VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                            </Grid>
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="Content" Property="Opacity" Value="{telerik:MaterialResource ResourceKey=DisabledOpacity}"/>
                            <Setter TargetName="HeaderContent" Property="Opacity" Value="{telerik:MaterialResource ResourceKey=DisabledOpacity}"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="arrow" Property="Foreground" Value="{telerik:MaterialResource ResourceKey=PrimaryHoverBrush}"/>
                            <Setter TargetName="HeaderContent" Property="Foreground" Value="{telerik:MaterialResource ResourceKey=PrimaryHoverBrush}"/>
                            <Setter TargetName="arrow" Property="Opacity" Value="1"/>
                            <Setter TargetName="HeaderContent" Property="Opacity" Value="1"/>
                        </Trigger>
                        <Trigger Property="ResultOrientation" Value="Vertical">
                            <Setter TargetName="HeaderContentTransform" Property="LayoutTransform">
                                <Setter.Value>
                                    <RotateTransform Angle="90"/>
                                </Setter.Value>
                            </Setter>
                            <Setter TargetName="HeaderContentTransform" Property="Grid.Row" Value="1"/>
                        </Trigger>
                        <Trigger Property="ResultOrientation" Value="Horizontal">
                            <Setter TargetName="HeaderContentTransform" Property="LayoutTransform">
                                <Setter.Value>
                                    <RotateTransform Angle="0"/>
                                </Setter.Value>
                            </Setter>
                            <Setter TargetName="HeaderContentTransform" Property="Grid.Column" Value="0"/>
                        </Trigger>
                        <Trigger Property="ExpandDirection" Value="Down">
                            <Setter TargetName="col0" Property="Width" Value="*"/>
                            <Setter TargetName="row1" Property="Height" Value="*"/>
                            <Setter TargetName="Content" Property="Grid.Row" Value="1"/>
                        </Trigger>
                        <Trigger Property="ExpandDirection" Value="Up">
                            <Setter TargetName="col0" Property="Width" Value="*"/>
                            <Setter TargetName="row0" Property="Height" Value="*"/>
                            <Setter TargetName="ImageEditorHeaderButton" Property="Grid.Row" Value="1"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style TargetType="imageEditor:RadImageEditorUI" x:Key="RadImageEditorUIStyle">
        <Setter Property="Background" Value="{telerik:MaterialResource ResourceKey=AlternativeBrush}"/>
        <Setter Property="FontFamily" Value="{telerik:MaterialResource ResourceKey=FontFamily}"/>
        <Setter Property="FontSize" Value="{telerik:MaterialResource ResourceKey=FontSize}"/>
        <Setter Property="Padding" Value="9"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="imageEditor:RadImageEditorUI">
                    <Grid x:Name="LayoutRoot" Background="{TemplateBinding Background}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <mat:Shadow ShadowDepth="Depth1" Background="{telerik:MaterialResource ResourceKey=MainBrush}" Margin="{TemplateBinding Padding}"/>
                        <Grid Background="{telerik:MaterialResource ResourceKey=MainBrush}" Margin="{TemplateBinding Padding}" MinWidth="180">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid Margin="0 0 0 2">
                                <mat:Shadow ShadowDepth="Depth1" Background="{telerik:MaterialResource ResourceKey=MainBrush}"/>
                                <StackPanel Orientation="Horizontal">
                                    <telerik:RadButton
                                            Command="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=OpenCommand, Mode=TwoWay}"
                                            IsBackgroundVisible="False"
                                            CommandParameter="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=OpenCommandParameter, Mode=TwoWay}"
                                            Visibility="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=IsOpenButtonVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
                                            Width="36"
                                            Height="36"
                                            Foreground="{telerik:MaterialResource ResourceKey=IconBrush}"
                                            Padding="0"
                                            CornerRadius="0"
                                            mat:MaterialAssist.IsShadowDisabled="True">
                                        <ToolTipService.ToolTip>
                                            <TextBlock Text="{telerik:LocalizableResource Key=ImageEditor_Open}"/>
                                        </ToolTipService.ToolTip>
                                        <TextBlock
                                                FontFamily="{StaticResource TelerikWebUI}"
                                                FontSize="16"
                                                telerik:GlyphAdorner.ShowGlyphInDesignTime="True"
                                                FontWeight="Normal"
                                                FontStyle="Normal"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center">
                                            <Run Text="{StaticResource GlyphFolderOpen}"/>
                                        </TextBlock>
                                    </telerik:RadButton>
                                    <telerik:RadButton
                                            Command="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=SaveCommand, Mode=TwoWay}"
