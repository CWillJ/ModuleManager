        <Setter Property="IsTabStop" Value="False" />
        <Setter Property="MinWidth" Value="730" />
        <Setter Property="MinHeight" Value="540" />
        <Setter Property="Width" Value="1024" />
        <Setter Property="Height" Value="768" />
        <Setter Property="animation:AnimationManager.AnimationSelector">
            <Setter.Value>
                <animation:AnimationSelector>
                    <animation:AnimationGroup AnimationName="Show">
                        <animation:FadeAnimation Direction="In" TargetElementName="LayoutRoot" />
                        <animation:ScaleAnimation
                            Direction="In"
                            MinScale="0.9"
                            TargetElementName="LayoutRoot" />
                    </animation:AnimationGroup>
                    <animation:AnimationGroup AnimationName="Hide">
                        <animation:FadeAnimation Direction="Out" TargetElementName="LayoutRoot" />
                        <animation:ScaleAnimation
                            Direction="Out"
                            MinScale="0.9"
                            TargetElementName="LayoutRoot" />
                    </animation:AnimationGroup>
                </animation:AnimationSelector>
            </Setter.Value>
        </Setter>
        <Setter Property="navigation:RadWindowInteropHelper.OpaqueWindowBackground" Value="{telerik1:MaterialResource ResourceKey=PrimaryNormalBrush}" />
        <Style.Triggers>
            <Trigger Property="IsInActiveState" Value="False">
                <Setter Property="mat:MaterialAssist.ShadowDepth" Value="Depth1" />
            </Trigger>
            <Trigger Property="navigation:RadWindowInteropHelper.AllowTransparency" Value="False">
                <Setter Property="animation:AnimationManager.IsAnimationEnabled" Value="False" />
                <Setter Property="mat:MaterialAssist.IsShadowDisabled" Value="True" />
                <Setter Property="BorderThickness" Value="1" />
            </Trigger>
        </Style.Triggers>
    </Style>
