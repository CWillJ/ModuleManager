        x:Key="RadOpenFileDialogStyle"
        BasedOn="{StaticResource DialogWindowStyle}"
        TargetType="telerikControls:RadOpenFileDialog">
        <Setter Property="Header" Value="{Binding Manager.Culture, Source={StaticResource localizationManagerProvider}, Converter={StaticResource cultureToStringConverter}, ConverterParameter=FileDialogs_OpenFileDialogHeader}" />
